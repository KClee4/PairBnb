<div class="custom-file text-field">
  <%= form.label :profile_image %>
  <%= form.file_field :profile_image, multiple: false, class:"custom-file-input" %>
</div>


<div class="text-field form-group">
  <%= form.label :firstname %>
  <%= form.text_field :firstname, type: 'text', class:"form-control" %>
</div>

<div class="text-field form-group">
  <%= form.label :lastname %>
  <%= form.text_field :lastname, type: 'text', class:"form-control" %>
</div>

<div class="date-field form-group">
  <%= form.label :birthday %>
  <%= form.date_select :birthday, type: 'date', start_year: 1900, class:"form-control" %>
</div>

<div class="text-field form-group">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email', class:"form-control" %>
</div>

<div class="password-field">
  <%= form.label :password %>
  <%= form.password_field :password ,class:"form-control"%>
</div>


