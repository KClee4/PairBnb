<div class="container">
	<div class="user-profile">
		<div class="user-profile__image">
			<%= image_tag @user.profile_image_url(:medium) %>
		</div>
		<div class="user-profile__details">
			<h1><%= @user.firstname + " " + @user.lastname %></h1>
			<p><%= @user.email %></p>
			<%= link_to "Edit", edit_user_path, class: "btn btn-primary" if @user == current_user  %>
		</div>
	</div>
	

</div>